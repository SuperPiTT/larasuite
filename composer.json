{
    "name": "larasuite/larasuite",
    "type": "project",
    "description": "B2B SaaS platform for field service companies",
    "keywords": ["laravel", "saas", "multi-tenant", "filament"],
    "license": "proprietary",
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-redis": "*",
        "ext-intl": "*",
        "ext-bcmath": "*",
        "filament/filament": "^4.0",
        "laravel/framework": "^12.0",
        "laravel/horizon": "^5.29",
        "laravel/tinker": "^2.10",
        "spatie/laravel-multitenancy": "^4.0",
        "spatie/laravel-data": "^4.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.37",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.5",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-faker": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.0",
        "rector/rector": "^2.0",
        "spatie/laravel-ignition": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "test": "pest",
        "test:coverage": "pest --coverage --min=80",
        "test:types": "pest --type-coverage --min=100",
        "analyze": "phpstan analyse",
        "format": "pint",
        "format:check": "pint --test",
        "rector": "rector process",
        "rector:dry": "rector process --dry-run",
        "quality": [
            "@format",
            "@analyze",
            "@test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "./packages/*",
            "options": {
                "symlink": true
            }
        }
    ]
}

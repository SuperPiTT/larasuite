# =============================================================================
# LARASUITE - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values for your local environment

APP_NAME=Larasuite
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Europe/Madrid
APP_URL=http://larasuite.test
APP_LOCALE=es
APP_FALLBACK_LOCALE=en

# Central domain (superadmin panel)
CENTRAL_DOMAIN=larasuite.test

# =============================================================================
# DOCKER PORTS
# =============================================================================
APP_PORT=80
DB_PORT=5432
REDIS_PORT=6379
MAILPIT_DASHBOARD_PORT=8025
MAILPIT_SMTP_PORT=1025
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
SOKETI_PORT=6001
SOKETI_METRICS_PORT=9601
VITE_PORT=5173

# Host user UID/GID for Docker permissions
UID=1000
GID=1000

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=larasuite
DB_USERNAME=larasuite
DB_PASSWORD=secret

# Tenant database prefix (tenant databases will be: larasuite_tenant_{id})
TENANT_DB_PREFIX=larasuite_tenant_

# =============================================================================
# CACHE & SESSION
# =============================================================================
CACHE_STORE=redis
CACHE_PREFIX=larasuite_cache_

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.larasuite.test

# =============================================================================
# QUEUE - Redis + Horizon
# =============================================================================
QUEUE_CONNECTION=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MAIL - Mailpit (local development)
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@larasuite.test"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# FILESYSTEM - MinIO (S3-compatible)
# =============================================================================
FILESYSTEM_DISK=s3

AWS_ACCESS_KEY_ID=larasuite
AWS_SECRET_ACCESS_KEY=secretkey
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=larasuite
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

MINIO_ROOT_USER=larasuite
MINIO_ROOT_PASSWORD=secretkey

# =============================================================================
# BROADCASTING - Soketi (Pusher-compatible)
# =============================================================================
BROADCAST_CONNECTION=pusher

PUSHER_APP_ID=larasuite
PUSHER_APP_KEY=larasuite-key
PUSHER_APP_SECRET=larasuite-secret
PUSHER_HOST=soketi
PUSHER_PORT=6001
PUSHER_SCHEME=http

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST=localhost
VITE_PUSHER_PORT="${SOKETI_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"

# =============================================================================
# LOGGING
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
FEATURE_REGISTRATION=true
FEATURE_API=false
